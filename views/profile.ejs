                    <option value="Jamkhed" >Jamkhed</option>
                    <option value="Khirda">Khirda</option>
                    <option value="Davha">Davha</option>
                    <option value="Rajura">Rajura</option>
                    <option value="Khairkheda">Khairkheda</option>
                </select>
            </div>

            <!-- <input type="text" class="textInput" name="district" placeholder="District">
            <input type="text" class="textInput" name="state" placeholder="State"> -->
        
            <div class="terms">
                <input type="checkbox" name="active" id="ad" class="check" placeholder="Active">
                    <label class="tac" for="">Agree Terms and Conditions</label>  
            </div>
            <button class="subBtn" type="submit">Submit</button>
            </form>
        </div>
    </div>
